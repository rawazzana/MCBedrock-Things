{
  "third_party_server_screen@sfplus_common.sfplus_screen_base": {
    "$no_safezone_screen_content": "server_form.main_screen_content",
    "$safezone_screen_animations": [],
    "$no_safezone_screen_animations": [],
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      }
    ]
  },

  "main_screen_content": {
    "size": ["100%", "100%"]
  },

  "main_screen_content/server_form_factory": {
    "control_ids": {
      "long_form": "sfplus_screen_defs.long_form_screens",
      "custom_form": "sfplus_screen_defs.custom_form_screens"
    }
  },

  "long_form": {
    "$use_custom_title_control": true,
    "$custom_title_label": "sfplus_common.standard_title_label_no_prefix"
  },

  "custom_form": {
    "$use_custom_title_control": true,
    "$custom_title_label": "sfplus_common.standard_title_label_no_prefix"
  }
}

{
  "third_party_server_screen@sfplus_common.sfplus_screen_base": {
    "$no_safezone_screen_content": "sfplus_screen_defs.custom_screens",
    "$is_root_screen": true,
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      }
    ]
  },

  "long_form": {
    "$use_custom_title_control": true,
    "$custom_title_label": "sfplus_common.standard_title_label_no_prefix"
  },

  "custom_form": {
    "$use_custom_title_control": true,
    "$custom_title_label": "sfplus_common.standard_title_label_no_prefix"
  }
}

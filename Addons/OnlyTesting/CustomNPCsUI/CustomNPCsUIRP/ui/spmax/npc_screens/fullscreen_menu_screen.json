{
    "namespace": "spmax_npc_fullscreen",

	"selector_area_content": {
		"type": "stack_panel",
		"collection_name": "student_buttons_collection",
	    "controls": [
			{
                "top_padding": {
                    "type": "panel",
                    "size": [ "100%", 2 ]
                }
            },
			{
				"message@settings_common.selector_group_label": {
					"text": "spmax.customnpcs.wip",
					"text_alignment": "center"
				}
			},
			{
                "bottom_padding": {
                    "type": "panel",
                    "size": [ "100%", 2 ]
                }
            }
		]
	},

	"section_area_content": {
		"type": "stack_panel",
	    "controls": [
			{
                "top_padding": {
                    "type": "panel",
                    "size": [ "100%", 2 ]
                }
            },
			{
				"message@settings_common.selector_group_label": {
					"text": "spmax.customnpcs.wip",
					"text_alignment": "center"
				}
			},
			{
                "bottom_padding": {
                    "type": "panel",
                    "size": [ "100%", 2 ]
                }
            }
		]
	},
    
    "main_screen@common.base_screen": {
		"$back_button_text|default": "",
		"$screen_content": "spmax_customnpcs_common.fullscreen_divider_screen",
		"$selector_area_content": "spmax_npc_fullscreen.selector_area_content",
		"$section_area_content": "spmax_npc_fullscreen.section_area_content",
    	"$screen_bg_content": "common.screen_background",
		"$screen_background_alpha": 0.9
    }
}

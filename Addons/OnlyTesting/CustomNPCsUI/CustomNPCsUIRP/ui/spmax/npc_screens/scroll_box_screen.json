{
    "namespace": "spmax_npc_scroll_box",

	"screen_content": {
        "type": "panel",
        "controls": [
            {
				"menu_screen": {
					"type": "panel",
					"size": [ "40%", "70%" ],
					"controls": [
						{
                			"common_panel@common.common_panel": {
								"$dialog_background": "common.dialog_background_hollow_3"
							}
            			},
						{
                			"close_button@npc_interact.close_button_holder": {
                    			"offset": [ 0, 21 ]
                			}
            			},
            			{
                			"menu_title@common_dialogs.title_label": {
                    			"$text_name": "$screen_title_text",
								"ignored": "(not $screen_title_text > '')",
                    			"offset": [ 0, 8 ]
                			}
    			        },
    			        {
    			            "scroll_panel@common.scrolling_panel": {
    			                "$scrolling_content": "spmax_npc_scroll_box.scrolling_content",
								"size": [ "100% - 16px", "100% - 31px" ],
    			                "offset": [ 0, 23 ],
    			                "anchor_from": "top_middle",
    			                "anchor_to": "top_middle",
    			                "$show_background": false,
    			                "$scroll_size": [ "5px", "100% - 4px" ],
            			        "$scroll_bar_left_padding_size": [ 1, 0 ]
			                }
        			    }
					]
				}
			},
			{
				"close_helper@npc_interact.close_text": {
					"anchor_to": "bottom_left",
					"anchor_from": "bottom_left",
					"offset": [ 20, 0 ]
				}
			}
        ]
    },

    "scrolling_content": {
        "type": "stack_panel",
        "size": [ "100%", "100%c" ],
        "controls": [
            {
                "top_padding": {
                    "type": "panel",
                    "size": [
                        "100%",
                        2
                    ]
                }
            },
            {
				"dialog_message": {
					"type": "label",
					"text_alignment": "center",
					"size": [ "100%", "default" ],
					"text": "#dialogtext",
					"bindings": [
						{
							"binding_name": "#dialogtext"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#dialogtext > '')",
							"target_property_name": "#visible"
						}
					]
				}
			},
            {
				"student_buttons": {
					"type": "stack_panel",
					"collection_name": "student_buttons_collection",
					"size": [ "100%", "100%c" ],
					"controls": [
						{
							"0@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 0
							}
						},
						{
							"1@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 1
							}
						},
						{
							"2@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 2
							}
						},
						{
							"3@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 3
							}
						},
						{
							"4@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 4
							}
						},
						{
							"5@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 5
							}
						},
						{
							"6@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 6
							}
						},
						{
							"7@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 7
							}
						},
						{
							"8@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 8
							}
						},
						{
							"9@spmax_customnpcs_common.student_button": {
								"size": [ "100%", "30px" ],
								"collection_index": 9
							}
						}
					]
					//The factory is unused because it use have conflicts with hardcoded collection sizes
					//Action count doesn't work properly when using /dialogue with custom scene files
					/*"factory": {
						"name": "action_item_factory",
						"control_name": "spmax_customnpcs_common.student_button"
					},
					"bindings": [
						{
							"binding_name": "#action_count", //#button_count
							"binding_name_override": "#collection_length"
						}
					]*/
				}
			},
            {
                "bottom_padding": {
                    "type": "panel",
                    "size": [
                        "100%",
                        2
                    ]
                }
            }
        ]
    },
	
    "main_screen@common.base_screen": {
		"$screen_content": "spmax_npc_scroll_box.screen_content",
		"$screen_title_text|default": "",
		"$show_close_button": false
    }
}

{
    "namespace": "spmax_npc_bottom_action",
	
    "screen_content": {
        "type": "panel",
        "controls": [
            {
				"menu_screen": {
					"type": "panel",
					"size": [ "60%", "75px" ],
					"anchor_from": "bottom_middle",
					"anchor_to": "bottom_middle",
					"offset": [ 0, "-25px" ],
					"controls": [
						{
            			    "common_panel@common.common_panel": {
								"$dialog_background": "common.dialog_background_hollow_3"
							}
            			},
            			{
            			    "close_button@npc_interact.close_button_holder": {
           			         "offset": [ 0, 21 ]
            			    }
            			},
            			{
                			"menu_title@common_dialogs.standard_title_label": {
                    			"$text_name": "#title_text",
								"anchor_from": "top_middle",
    							"anchor_to": "top_middle",
                    			"offset": [ 0, 8 ],
								"bindings": [
									{
										"binding_name": "#title_text"
									},
									{
										"binding_type": "view",
										"source_property_name": "(#title_text > '')",
										"target_property_name": "#visible"
									}
								]
                			}
    			        },
						{
							"dialog_message": {
								"type": "label",
								"text_alignment": "center",
								"size": [ "100%-16px", "default" ],
								"anchor_from": "center",
								"anchor_to": "center",
								"offset": [ 0, -2 ],
            			        "text": "#newdialogtext",
            			        "bindings": [
            			        	{
            			        		"binding_name": "#dialogtext"
            			        	},
            			        	{
            			        		"binding_type": "view",
            			        		"source_property_name": "(#dialogtext - $dialog_prefix > '')",
            			        		"target_property_name": "#visible"
            			        	},
            			        	{
            			        		"binding_type": "view",
            				        	"source_property_name": "(#dialogtext - $dialog_prefix)",
            			        		"target_property_name": "#newdialogtext"
            			        	}
            			        ]
							}
						},
						{
							"student_buttons": {
								"type": "stack_panel",
								"anchor_from": "bottom_middle",
								"anchor_to": "bottom_middle",
								"orientation":"horizontal",
								"size": [ "100% - 16px", "20px" ],
								"offset": [ 0, -8 ],
								"collection_name": "student_buttons_collection",
								"controls": [
									{
										"0@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 0
										}
									},
									{
										"1@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 1
										}
									},
									{
										"2@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 2
										}
									},
									{
										"3@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 3
										}
									},
									{
										"4@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 4
										}
									},
									{
										"5@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 5
										}
									},
									{
										"6@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 6
										}
									},
									{
										"7@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 7
										}
									},
									{
										"8@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 8
										}
									},
									{
										"9@spmax_customnpcs_common.student_button": {
											"size": [ "fill", "100%" ],
											"collection_index": 9
										}
									}
								]
							}
						}
					]
				}
			},
			{
				"close_helper@npc_interact.close_text": {
					"anchor_to": "bottom_left",
					"anchor_from": "bottom_left",
					"offset": [ 20, 0 ]
				}
			}
        ]
	},

	"main_screen@common.base_screen": {
        "$screen_content": "spmax_npc_bottom_action.screen_content",
		"$screen_bg_content": "common.screen_background",
		"$screen_background_alpha": "$background_opacity",
		"$show_close_button": false,
		"$screen_animations": [
            "@common.container_screen_exit_animation_push",
            "@common.container_screen_exit_animation_pop",
            "@common.container_screen_entrance_animation_push",
            "@common.container_screen_entrance_animation_pop",
            "@common.screen_exit_animation_push_fade",
            "@common.screen_exit_animation_pop_fade",
            "@common.screen_entrance_animation_push_fade",
            "@common.screen_entrance_animation_pop_fade"
        ]
    }
}

{
    "namespace": "spmax_npc_vanilla_screen",
	
	"screen_content": {
    	"type": "panel",
		"controls": [
			{
				"menu_screen@common_dialogs.form_fitting_main_panel_no_buttons": {
					"$custom_background": "common_dialogs.dialog_background_opaque_with_child",
					"$child_control": "spmax_npc_vanilla_screen.student_menu",
        			"size": [ 320, "100%" ]
    			}
			},
			{
				"close_helper@npc_interact.close_text": {
					"anchor_to": "bottom_left",
					"anchor_from": "bottom_left",
					"offset": [ 20, 0 ]
				}
			}
		]
	},

	"student_menu": {
    	"type": "panel",
		"size": [ "100%", "100%cm" ],
		"controls": [
			{
            	"menu_title@common_dialogs.standard_title_label": {
            		"$text_name": "#title_text",
					"anchor_from": "top_middle",
    				"anchor_to": "top_middle",
            		"offset": [ 0, -17 ],
					"bindings": [
						{
							"binding_name": "#title_text"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#title_text > '')",
							"target_property_name": "#visible"
						}
					]
            	}
    		},
			{
	    	    "student_view@npc_interact.student_view_content": {}
	    	}
	    ]
	},

	"student_message_section@common.empty_panel": {
		"size": [ "100%", 97 ],
		"anchor_from": "center",
		"anchor_to": "center",
		"controls": [
				{ "model@npc_interact.message_model_window": {} },
				{ "point@npc_interact.bubble_point": {} },
				{
					"student_message_bubble": {
						"type": "image",
						"texture": "textures/ui/dialog_bubble",
						"anchor_from": "right_middle",
						"anchor_to": "right_middle",
						"size": [ 222, "100%" ],
						"$virtual_keyboard_buffer_control": "text_scroll",
						"controls": [
							{
								"text_scroll@common.scrolling_panel": {
								"size": [ "100% - 10px", "100% - 11px" ],
								"$always_handle_scrolling": true,
								"$scrolling_content": "spmax_npc_vanilla_screen.vanilla_dialog_text",
								"$scroll_box_visible_touch": false,
								"$show_background": false,
								"$scroll_bar_left_padding_size": [ 0, 0 ],
								"$scroll_bar_right_padding_size": [ 0, 0 ],
								"$scroll_size": [ 5, "100%" ],
								"$scroll_size_touch": "$scroll_size",
								"offset": [ 0, -1 ]
							}
						}
					]
				}
			}
		]
	},

	"vanilla_dialog_text": {
		"type": "label",
		"size": [ "100%", "default" ],
		"color": "$npc_dialog_text_color",
		"text": "#newdialogtext",
		"bindings": [
			{
				"binding_name": "#dialogtext"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#dialogtext - $dialog_prefix > '')",
				"target_property_name": "#visible"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#dialogtext - $dialog_prefix)",
				"target_property_name": "#newdialogtext"
			}
		]
	},

    "main_screen@common.base_screen": {
		"$screen_content": "spmax_npc_vanilla_screen.screen_content",
		"$show_close_button": false
    }
}

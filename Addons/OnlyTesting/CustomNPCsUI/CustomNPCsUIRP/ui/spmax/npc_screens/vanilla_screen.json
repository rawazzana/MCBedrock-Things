{
    "namespace": "spmax_npc_vanilla_screen",
	
	"screen_content@common_dialogs.form_fitting_main_panel_no_buttons": {
		"$custom_background": "common_dialogs.dialog_background_opaque_with_child",
		"$child_control": "spmax_npc_vanilla_screen.student_menu",
        "size": [ 320, "100%" ]
    },

	"student_menu": {
    	"type": "panel",
		"size": [ "100%", "100%cm" ],
		"controls": [
			{
            	"menu_title@common_dialogs.title_label": {
					"$text_name": "$screen_title_text",
					"ignored": "(not $screen_title_visible)",
    	            "anchor_from": "top_middle",
	                "anchor_to": "top_middle",
                	"offset": [ 0, -17 ]
            	}
        	},
			{
	            "student_view@npc_interact.student_view_content": {}
	        }
	    ]
	},

    "main_screen@common.base_screen": {
		"$screen_content": "spmax_npc_vanilla_screen.screen_content",
		"$screen_title_text|default": "spmax.screen.npc.vanilla_screen",
		"$screen_title_visible|default": false,
		"$show_close_button": false,
        "bindings": [
            {
                "binding_name": "#student_view_visible",
                "binding_name_override": "#visible",
                "binding_type": "global"
            }
        ]
    }
}

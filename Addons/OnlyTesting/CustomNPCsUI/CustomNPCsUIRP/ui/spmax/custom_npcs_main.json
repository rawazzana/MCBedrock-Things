{
	"namespace": "spmax_customnpcs",
	"npc_screens": {
		"type": "panel",
		"controls": [
			//example changing the screen by checking the npc name
			{
				"screen_test1@player_status.main_screen": {
					"bindings": [
						{
							"binding_name": "#title_text",
							"binding_type": "global"
						},
						{
								"binding_name": "#teacher_view_visible",
								"binding_type": "global"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#title_text = 'PlayerInfo_TwoButtons_Name' and (not #teacher_view_visible))",
							"target_property_name": "#visible"
						}
					]
				}
			},
			//example changing the screen by checking the dialog text
			{
				"screen_test2@player_status.main_screen": {
					"bindings": [
						{
							"binding_name": "#dialogtext",
							"binding_type": "global"
						},
						{
								"binding_name": "#teacher_view_visible",
								"binding_type": "global"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#dialogtext = 'PlayerInfo_TwoButtons_Text' and (not #teacher_view_visible))",
							"target_property_name": "#visible"
						}
					]
				}
			},
			//example bottom action screen
			{
				"screen_test3@npc_bottom_action.main_screen": {
					"bindings": [
						{
							"binding_name": "#title_text",
							"binding_type": "global"
						},
						{
								"binding_name": "#teacher_view_visible",
								"binding_type": "global"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#title_text = 'NPC_BottomAction' and (not #teacher_view_visible))",
							"target_property_name": "#visible"
						}
					]
				}
			},
			//example scroll box screen
			{
				"screen_test4@npc_scroll_box.main_screen": {
					"bindings": [
						{
							"binding_name": "#title_text",
							"binding_type": "global"
						},
						{
								"binding_name": "#teacher_view_visible",
								"binding_type": "global"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#title_text = 'NPC_ScrollBox' and (not #teacher_view_visible))",
							"target_property_name": "#visible"
						}
					]
				}
			},
			// other examples with dummy screens
			{
				"screen_test5@world_info.main_screen": {
					"bindings": [
						{
							"binding_name": "#title_text",

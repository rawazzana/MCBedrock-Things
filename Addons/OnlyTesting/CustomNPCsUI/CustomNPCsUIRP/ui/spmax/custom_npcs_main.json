			{
				"vanilla_dialog@spmax_npc_vanilla_screen.main_screen": {
					"$screen_title_text": "spmax.screen.npc.vanilla_npc",
					"$screen_title_visible": true,
					"bindings": [
						{
							"binding_name": "#title_text",
							"binding_type": "global"
						},
						{
								"binding_name": "#teacher_view_visible",
